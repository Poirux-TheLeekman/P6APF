{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

         
 <h1> Connexion</h1>
 <form action="{{ path('login')}}" method="post">
     <div class="form-goup">
		<input placeholder="Adresse email" required name="_username" type="text" class="form-control">   
     </div>
     <div class="form-goup">
		<input placeholder="mot de passe" required name="_password" type="password" class="form-control">   
     </div>
     <input type="hidden" name="_target_path" value="{{ path('account') }}"/>
     <div class="form-goup">
     <button type="submit" class="btn btn-succes">Connexion</button>
     </div>
 </form>

{% endblock %}
