{% extends 'base.html.twig' %}
{% block title %}Actor view{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;   }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h2>Fiche Acteur :</h2>
	<div class="container" style="display: flex;">
        	<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
          		<div class="card-title"><h4><b>{{ actor.name }}</b></h4></div>
             	 	<div class="card-body">
                	<p class="card-text">{{ actor.description }}</p>
                	                	<p class="card-text"><b>Mail : </b>{{ actor.mail }}</p>     
										<p class="card-text"><b>Tel : </b>{{ actor.phone }}</p>                	           	
                	                	<p class="card-text"><b>Site internet : </b>{{ actor.website }}</p>
                	<p class="card-text"><b>cat√©gorie(s) :</b></p>
						<p class="card-text">
					   {% if not actor.categories.empty %}
                      <ul>
                        {% for category in actor.categories %}
                        <li>  {{ category.name }}</li>
                        {% endfor %}
                      </ul>
                    {% endif %}
						</p>
                	<p class="card-text">
                	</p>
                	
              		</div>
        	</div>
    	   
    </div>	
</div>
{% endblock %}
