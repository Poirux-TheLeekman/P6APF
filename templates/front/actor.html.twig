{% extends 'base.html.twig' %}
{% block title %}Actor view{% endblock %}
{% block stylesheets %}
<link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;   }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <h2>Fiche Acteur :</h2>
	<div class="container" style="display: flex;">
        	<div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
          		<div class="card-title"><h4><b>{{ actor.name }}</b></h4></div>
             	 	<div class="card-body">
                	<p class="card-text"><p class="desc">{{ actor.description }}</</p>
										<p class="card-text"><i class="fas fa-home"></i><b> : </b>{{ actor.address }}</p>     
                	                	<p class="card-text"><a href="mailto:{{ actor.mail }}"><i class="fas fa-envelope-open-text"></i><b> : </b>{{ actor.mail }}</a></p>     
										<p class="card-text"><img src="../../uploads/phone2.svg"><b> : </b>{{ actor.phone }} {% if actor.fax%}<br>fax : {{ actor.fax }} {% endif %}
										</p>                	           	
                	                	<p class="card-text"><a href="{{ actor.website }}" target="_blank">{{ actor.website }}</a></p>
                	<p class="card-text"><b>cat√©gorie(s) :</b></p>
						<p class="card-text">
					   {% if not actor.categories.empty %}
                      <ul>
                        {% for category in actor.categories %}
                        <li>  {{ category.name }}</li>
                        {% endfor %}
                      </ul>
                    {% endif %}
						</p>
                	<p class="card-text">
                	</p>
                	
              		</div>
        	</div>
    	   
    </div>	
</div>
{% endblock %}
