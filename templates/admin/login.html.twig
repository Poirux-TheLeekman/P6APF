{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

 <div class="container text-center">
  <h3> Connexion :</h3>
	<div class="jumbotron">
	<form action="{{ path('login')}}" method="post">
	<div class="row text-center">
		<div class="col">
         <div class="form-goup">
    		<input placeholder="Adresse email" required name="_username" type="text" class="form-control">   
         </div>
        </div> 
        <div class="col">
        
         <div class="form-goup">
    		<input placeholder="mot de passe" required name="_password" type="password" class="form-control">   
         </div>
         </div>
         <div class="col">
             <input type="hidden" name="goto" value="{{ path('admin') }}"/>
         <div class="form-goup col-2">
         <button type="submit" class="btn btn-success">Connexion</button>
         </div>
         </div>
     </div>
 	</form>
	</div>	
</div>

{% endblock %}
