    <body>
    	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
              <a class="navbar-brand" href="                   {% if not app.user %} {{ path('front') }}{% else %}{{ path('admin') }}{% endif %}">Annuaire Cartographique APF-Ain</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            
              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path('actors') }}">| Acteurs</a>
                  </li>
                  <li class="nav-item">
                   {% if not app.user %} 
                  <a class="nav-link" href="{{ path ('actor-new') }}">| Sousmettre un Acteur</a>
                   {% else %}
                   <a class="nav-link" href="{{ path ('actor-new') }}">| Nouvel acteur</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path ('categories') }}">| Catégories</a>
                  </li>
                  {% endif %}
                {% if is_granted('ROLE_ADMIN') %}                  
                    <li class="nav-item">
                    <a class="nav-link" href="{{ path ('category-new') }}">| Nouvelle catégorie</a>
                  </li>
				   <li class="nav-item">
                    <a class="nav-link" href="{{ path ('users') }}">| Utilisateurs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{ path ('user-new') }}">| Utilisateur</a>
                  </li>
                  {% else %}
                  <li class="nav-item">
                    <a class="nav-link" href="#">| Contact</a>
                  </li>
                  {% endif %}
                </ul>
                <ul>
                {%  if not app.user %}
                	<li class="nav-item">
                    <a class="nav-link" href="{{ path ('login') }}">Connexion</a>
                  	</li>
                  	{% else %}
                  	<li class="nav-item">
                    <a class="nav-link" href="{{ path ('logout') }}">Déconnexion</a>
                  </li>
                {% endif %}
                </ul>
              </div>
		</nav>
    
    		{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="{{ label }}" style=" margin:auto; text-align:center">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
